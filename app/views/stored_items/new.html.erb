<h2><%=l(:label_stored_item_new)%></h2>

<% labelled_form_for @stored_item do |f| %>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= submit_tag l(:button_create) %>
    <%= submit_tag l(:button_create_and_continue), :name => 'continue' %>
    <%= javascript_tag "Form.Element.focus('stored_item_name');" %>
<% end %>
